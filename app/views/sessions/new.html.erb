<div class="page-header">
  <h1>Login</h1>
</div>
<%= form_tag sessions_path, { :class => 'form-horizontal'} do %>
  <div class="control-group">
    <%= label_tag :email, 'Email', :class => 'control-label' %>
    <div class="controls">
      <%= text_field_tag :email, nil, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :password, 'Password', :class => 'control-label' %>
    <div class="controls">
      <%= password_field_tag :password, nil, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <label class="checkbox">
        <%# <input type="checkbox" value="option1" id="remember_me"> %>
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>
          Remember me
      </label>
    </div>
  </div>

  <div class="form-actions">
    <%= submit_tag 'Login', :class => 'btn btn-primary' %>
  </div>
<% end %>
