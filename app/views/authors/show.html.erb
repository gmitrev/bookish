<%- model_class = Author -%>
<div class="page-header">
  <h1><%= @author.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nationality) %>:</strong></dt>
  <dd><%= @author.nationality %></dd>
  <dt><strong><%= model_class.human_attribute_name(:born) %>:</strong></dt>
  <dd><%= @author.born %></dd>
  <dt><strong><%= model_class.human_attribute_name(:died) %>:</strong></dt>
  <dd><%= @author.died %></dd>
</dl>

<div class='row-fluid'>
  <div class='span6' style='padding: 10px; border: 1px solid #f1f1f1'>
    <h2>Books</h2>
      <% @author.books.each do |book| %>
        <a href="<%= book_path(book) %>" class="span2 user-book" style="text-align: center">
          <%= image_tag "/covers/#{book.isbn}.jpg", size: '71x107', class: "cover" %>
          <br />
            <%= book.title %>
        </a>
      <% end %>
  </div>
  <div class='span6' style='padding: 10px; border: 1px solid #f1f1f1'>
    <h2>Quotes</h2>
  </div>
</div>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              authors_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_author_path(@author), :class => 'btn' %>
  <% if admin? %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              author_path(@author),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% end %>
</div>
