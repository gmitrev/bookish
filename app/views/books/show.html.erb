<%- model_class = Book -%>
<div class='page-header'>
  <h1><%= @book.title %></h1>
  by David Foster Wallace
</div>
<div class="row-fluid">
  <div class="span2">
    <%= image_tag "/covers/#{@book.isbn}.jpg", size: '146x226' %>
      <a class="btn btn-success btn-small" style="width: 122px; margin-top: 10px;" href="#">Want</a>
      <a class="btn btn-warning btn-small" style="width: 122px; margin-top: 5px" href="#">Have</a>
  </div>
  <div class="span9">
        <p>
          <%= @book.description %>
        </p>
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:isbn) %>:</strong></dt>
      <dd><%= @book.isbn %></dd>
      <dt><strong><%= model_class.human_attribute_name(:lang) %>:</strong></dt>
      <dd><%= @book.lang %></dd>
      <dt><strong><%= model_class.human_attribute_name(:published_in) %>:</strong></dt>
      <dd><%= @book.published_in %></dd>
      <dt><strong><%= model_class.human_attribute_name(:published_by) %>:</strong></dt>
      <dd><%= @book.published_by %></dd>
    </dl>
        
  </div>
  <div class="span11">
    <div class="form-actions">
      <%= link_to t('.back', :default => t("helpers.links.back")),
                  books_path, :class => 'btn'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_book_path(@book), :class => 'btn' %>
    <% if admin? %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  book_path(@book),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
      <% end %>
    </div>
  </div>

  
</div>

