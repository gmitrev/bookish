<h1>Listing books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Isbn</th>
    <th>Lang</th>
    <th>Page count</th>
    <th>Published in</th>
    <th>Published by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.description %></td>
    <td><%= book.isbn %></td>
    <td><%= book.lang %></td>
    <td><%= book.page_count %></td>
    <td><%= book.published_in %></td>
    <td><%= book.published_by %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

